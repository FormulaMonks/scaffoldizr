workspace "{{workspaceName}}" {
    description "{{workspaceDescription}}"

    !adrs decisions
    !docs docs

    model {
        # Constants

        !include systems
        !include environments
    }

    views {
        {{#if shouldIncludeTheme}}
        themes "https://structurizr.test.zemoga-client.com/share/1/theme"
        {{/if}}
        !constant AUTHOR "Author: {{authorName}} <{{authorEmail}}>"

        !include views
    }
}
