{
    "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "formatter": {
        "indentWidth": 4,
        "indentStyle": "space",
        "includes": [
            "**",
            "!**/architecture/**/*.json",
            "!**/.vscode/**/*.json",
            "!**/bun.lockb"
        ]
    },
    "linter": {
        "enabled": true,
        "includes": [
            "**",
            "!**/architecture/**/*.json",
            "!**/.vscode/**/*.json",
            "!**/bun.lockb"
        ],
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "error",
                "noUndeclaredVariables": "error"
            }
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}
